{% extends "base.twig" %}

{% block intro %}
	<header class="intro__header">
		<div id="breadcrumbs" class="">
			<span>
				<a href="/">{{ _e('About Us', 'view') }}
					>
				</a>
				{{ _e('Press', 'view') }}</span>
		</div>
		<h1 class="intro__heading">{{ _e("Recent press about our work", 'view') }}</h1>
	</header>
{% endblock %}

{% block content %}
	<div class="posts-list container">
		<ol class="news-list">
			{% for post in posts %}
				{% if post.id %}
				{% include ["molecules/preview-#{post.post_type}.twig", 'molecules/preview.twig'] %}
				{% endif %}
			{% endfor %}
		</ol>
		{% include 'molecules/pagination.twig' %}
	</div>
{% endblock %}
